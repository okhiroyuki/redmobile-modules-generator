{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":prHourlyLimitNone",
    ":prConcurrentLimitNone",
    ":timezone(Asia/Tokyo)"
  ],
  "rangeStrategy": "pin",
  "major": {
    "automerge": false
  },
  "nodenv": {
    "enabled": false
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "automergeSchedule": ["before 2am"],
  "packageRules": [
    {
      "automerge": true,
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "stabilityDays": 3,
      "prCreation": "not-pending"
    },
    {
      "description": "Ignore node engine",
      "matchPackageNames": ["node"],
      "matchManagers": ["npm"],
      "matchDepTypes": ["engines"],
      "enabled": false
    }
  ]
}
